{
  "name": "resume-improver",
  "version": "1.0.0",
  "description": "A multi-platform app to improve resumes",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "start-web": "node server.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "resume",
    "cv",
    "improvement",
    "electron",
    "node",
    "express",
    "web",
    "app",
    "resume-improver",
    "resume-improvement",
    "resume-editor",
    "resume-builder",
    "resume-designer"
  ],
  "author": "Rajat Khairnar",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "docx": "^9.4.1",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "multer": "^1.4.5-lts.2",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.resume-improver.app",
    "productName": "Resume Improver",
    "copyright": "Copyright Â© 2025 ${author}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "package.json",
      "main.js",
      "server.js",
      "public/**/*",
      "node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": ".env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/Installer.ico"
    },
    "nsis": {
      "installerIcon": "build/Installer.ico",
      "uninstallerIcon": "build/Uninstaller.ico",
      "uninstallDisplayName": "Resume Improver",
      "license": "license.txt",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowElevation": true
    }
  }
}
